@model company.BL.Model.EmployeesVacationVM
@* @inject company.BL.Interface.IEmployeeRep employeeRep
@inject company.BL.Interface.IVacationRep vactionRep *@


@{
    ViewBag.Title = "Delete Employee Vacation";
}

<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h2>Delete Employee Vacation</h2>

            </div>
            <div class="body">
                <form id="form_validation" asp-asp-controller="EmployeesVacation" asp-action="Delete" method="post">

                    <div class="row">
                        <div class="col-lg-6">
                            <div class="form-group form-float">
                                <div class="form-line">
                                    <input type="text" class="form-control" asp-for="employee.employeeName" readonly="readonly" />
                                    <label class="form-label">Employee Name </label>

                                </div>
                            </div>
                            <div class="form-group form-float">
                                <div class="form-line">
                                    <input type="text" class="form-control" asp-for="vacation.vacationName" readonly="readonly" />
                                    <label class="form-label">Vacation Name</label>

                                </div>
                            </div>
                            <div class="form-group form-float">
                                <div class="form-line">
                                    <input type="text" class="form-control" asp-for="vacation.vacationCost" readonly="readonly" />
                                    <label class="form-label">Vacation Cost</label>

                                </div>
                            </div>


                        </div>
                    </div>

                    <button class="btn btn-primary waves-effect" type="submit">Delete</button>
                    <a asp-controller="EmployeesVacation" asp-action="index" class="btn btn-success">Back</a>


                </form>
            </div>
        </div>
    </div>
</div>

