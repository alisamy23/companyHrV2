@model company.BL.Model.EmployeeBounsVM


@{
    ViewBag.Title = "Add Employee Vacation";
}

<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h2>Add Employee Vacation</h2>
               
            </div>
            <div class="body">
                <form id="form_validation" asp-asp-controller="EmployeeBonus" asp-action="create" method="post">

                    <div class="row">

                        <div class="form-group form-float">
                            <div class="form-line ">

                                <select id="employeeId" asp-for="employeeId" class="form-control show-tick">
                             
                            </select>
                            <br />
                            <label class="form-label"> From Date </label>

                            </div>                  
                            <span asp-validation-for="employeeId" class="text-danger "></span>

                        </div>

                        <div class="form-group form-float">
                        <div class="form-group form-float">
                                <select asp-for="bonusId" id="bonusId" class="form-control show-tick">
                                    <option value="">-- Please select Bonus/Deduction  --</option>
                                   
                            </select>

                                <span asp-validation-for="bonusId" class="text-danger "></span>
                        </div>

                            <div class="form-group form-float">
                                <div class="form-line">
                                    <input type="text" class="form-control" onfocus="(this.type='date')" onblur="if(!this.value)this.type='text'" asp-for="date" />
                                    <label class="form-label">  Date </label>
                                    <span asp-validation-for="date" class="text-danger "></span>

                                </div>
                            </div>

                    </div>
   
                </div>

                    <button class="btn btn-primary waves-effect" type="submit">Create</button>
                    <button class="btn btn-primary waves-effect" type="reset">Cancel</button>
                    <a asp-controller="EmployeeBonus" asp-action="index" class="btn btn-success">Back</a>


                </form>
            </div>
        </div>
    </div>
</div>


@section MicrosoftValidation{
    <script>

        $(function () {

            $("#employeeId").empty();
            $("#employeeId").append("<option value='0'>Choose Employee</option>");
            $.ajax({
                type: "POST",
                url: "/Employees/getAllEmployee",
                data: {},
                success: function (res) {
                    console.log(res);
                    $.each(res, function (i, e) {
                        $("#employeeId").append("<option value='" + e.id + "'>" + e.employeeName + "</option>");
                    });
                }
            });


            $("#bonusId").empty();
            $("#bonusId").append("<option value='0'>Choose Bonus</option>");
            $.ajax({
                type: "POST",
                url: "/Bonuss/getAllbonuses",
                data: {},
                success: function (res) {
                    console.log(res);
                    $.each(res, function (i, e) {
                        $("#bonusId").append("<option value='" + e.id + "'>" + e.bonusName + "</option>");
                    });
                }
            });
        });
    </script>

    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>

    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

}
