@model company.BL.Model.BonusVM
@{
    ViewBag.Title = "Edit Bonus";
}
<div class="block-header">
    <a>الصفحة الرئيسية/ الاقسام/اضافة قسم</a>

</div>
<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h2>Edit Bonus</h2>

            </div>
            <div class="body">
                <form id="form_validation" asp-asp-controller="Bonuss" asp-action="edit" method="post">
                    <div class="form-group form-float">
                        <div class="form-line">
                            <input type="text" class="form-control" asp-for="bonusName" />
                            <label class="form-label">Bonus Name</label>
                            <span asp-validation-for="bonusName" class="text-danger "></span>
                        </div>
                    </div>
                    <div class="form-group form-float">
                        <div class="form-line">
                            <input type="number" class="form-control" asp-for="bonusValue" />
                            <label class="form-label"> Bonus Value</label>
                            <span asp-validation-for="bonusValue" class="text-danger "></span>

                        </div>
                    </div>
                    <div class="form-group">
                        <input type="radio" value="false" asp-for="Bonusflag" id="Deduction" class="with-gap">
                        <label for="Deduction">Deduction</label>

                        <input type="radio" value="true" asp-for="Bonusflag" id="bonus" checked="checked" class="with-gap">
                        <label for="bonus" class="m-l-20">Bonus</label>
                    </div>
                    <button class="btn btn-warning waves-effect" type="submit">Edit</button>

                    <a asp-controller="Bonuss" asp-action="index" class="btn btn-success">Back</a>


                </form>
            </div>
        </div>
    </div>
</div>


@section MicrosoftValidation{

    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}