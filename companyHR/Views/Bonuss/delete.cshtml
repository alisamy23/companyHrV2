@model company.BL.Model.BonusVM
@{
    ViewBag.Title = "Delete Bonus";
}

<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h2> Delete Bonus</h2>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            </div>
            <div class="body">
    <form id="form_validation" asp-asp-controller="Bonuss" asp-action="delete" method="post">
        <div class="form-group form-float">
            <div class="form-line">
                            <input type="text" class="form-control readOnly" asp-for="bonusName" readonly="readonly" />
                <label class="form-label">Bonus Name</label>
            </div>
        </div>
        <div class="form-group form-float">
            <div class="form-line">
                            <input type="number" class="form-control readOnly" asp-for="bonusValue" readonly="readonly" />
                <label class="form-label"> Bonus Name</label>

            </div>
        </div>
        <div class="form-group">
                    <label class="form-label"> Bonus Type : </label>

                        @{
                            if (Model.Bonusflag == false)
                            {
                                <label type="text"   disabled> Deduction</label>
                            }
                            else
                            {
                                <label type="text"  value="Bonus" disabled>Bonus</label>
                            }
                        }
                        </div>

                    
                   
         <button class="btn btn-primary waves-effect" type="submit">Delete</button>
         <a asp-controller="Bonuss" asp-action="index" class="btn btn-success">رجوع</a>


    </form>
</div>
        </div>
    </div>
</div>
<center>

</center>
